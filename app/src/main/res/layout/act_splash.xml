<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exomatik.carijasa.Activity.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/border_box_gradient_blue"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="@dimen/width100"
        android:layout_height="@dimen/width100"
        android:src="@drawable/logo2"
        android:layout_centerInParent="true"
        android:elevation="@dimen/margin_standard"
        android:id="@+id/img_logo2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_maintenance"
        android:text="@string/text_maintenance"
        android:textColor="@color/putih"
        android:textSize="@dimen/text_font"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_below="@+id/img_logo2"
        android:visibility="gone"
        />

</RelativeLayout>
