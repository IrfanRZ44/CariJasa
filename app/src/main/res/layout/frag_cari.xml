<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_cari"
        android:background="@drawable/border_et_putih"
        android:elevation="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginLeft="@dimen/margin_big"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/width50"
            android:id="@+id/et_cari"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/img_search"
            android:textColor="@color/hitam"
            android:textSize="@dimen/text_font"
            android:hint="Cari Jasa"
            android:fontFamily="@font/open_sans"
            android:textColorHint="@color/putihGelap3"
            android:lines="1"
            android:maxLines="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_blue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_standard"
            android:id="@+id/img_search"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rc_kategori"
        android:layout_below="@+id/rl_cari"
        android:layout_marginTop="@dimen/margin_standard"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada data jasa"
        android:textColor="@color/hitam"
        android:textSize="@dimen/text_font"
        android:fontFamily="@font/open_sans"
        android:id="@+id/text_nothing"
        android:layout_below="@+id/rl_cari"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:visibility="gone"
        />

</RelativeLayout>